@model IEnumerable<OrderManagementSystemApp.Models.Product>

<h2>Products</h2>

<a asp-action="Create" class="btn btn-primary">Add Product</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (Product product in Model)
{
    <tr>
        <td>@product.Name</td>
        <td>@product.Description</td>
        <td>@product.Price</td>
        <td>@product.StockQuantity</td>
        <td>
            <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-danger">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>