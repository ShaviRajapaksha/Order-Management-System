@model IEnumerable<OrderManagementSystemApp.Models.Customer>

<h2>Customers</h2>

<a asp-action="Create" class="btn btn-primary">Add Customer</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var customer in Model)
{
    <tr>
        <td>@customer.Name</td>
        <td>@customer.Email</td>
        <td>@customer.Phone</td>
        <td>@customer.Address</td>
        <td>
            <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger">Delete</a>
            <a asp-action="Order" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info">Order</a>
        </td>
    </tr>
}
    </tbody>
</table>